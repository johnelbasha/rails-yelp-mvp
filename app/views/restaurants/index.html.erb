<div class="container">
  <div class="d-flex justify-content-between align-items-center py-5">
    <h1>All the restaurants in our database</h1>
    <%= link_to 'Add New Restaurant', new_restaurant_path, class: 'btn btn-primary' %>
  </div>
  <div class="row">
    <% @restaurants.each do |rest| %>
      <div class="col-4">
        <div class="card mb-3">
          <div class="card-body">
            <h2> <%= rest.name %> </h2>
            <p> <%= rest.address %> </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>


</div>


